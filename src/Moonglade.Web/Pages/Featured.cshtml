@page "/archive/featured"
@model MoongladePure.Web.Pages.FeaturedModel

<h3>
    @SharedLocalizer["Featured Posts"]
</h3>
<hr />

@if (Model.Posts.Any())
{
    <partial name="_PostList" model="Model.Posts" />
}
else
{
    <div class="alert alert-info">
        @SharedLocalizer["No Posts"]
    </div>
}

<partial name="_LightSwitch" />